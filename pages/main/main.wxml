<!--pages/main/main.wxml-->
<import src='../../templates/sent_notification_template.wxml' />

<view class='base-container'>
  <view class='head-container'>
    <view class='{{currentTap == 0 ? "tapOn" : ""}}' data-current='0' bindtap='switchTitle'>
      <text>Sent</text>
    </view>
    <view class='{{currentTap == 1 ? "tapOn" : ""}}' data-current='1' bindtap='switchTitle'>
      <text>All</text>
    </view>
    <view class='{{currentTap == 2 ? "tapOn" : ""}}' data-current='2' bindtap='switchTitle'>
      <text>Overdue</text>
    </view>
  </view>
  <swiper duration='200' class='swiper-container' current='{{currentTap}}' bindchange='slideOnSwiper'>
    <swiper-item>
      <!-- 自己发送的通知的显示  -->
      <template is="sentNotificationTemplate"></template>
     
    </swiper-item>
    <swiper-item>
      <!--全部的通知  -->
      <scroll-view scroll-y class='body-container'>
        <view class='notification-container' catchtap='extendNotification'>
          <view class='noti-time-container'>
            <text>2018-5-4</text>
            <text>00:00</text>
          </view>
          <view class='noti-body-container'>
            <view class='noti-body'>
              <text> 通知的标题 </text>
              <image style='height:50rpx;width:50rpx;margin-right:16rpx;' mode="scaleToFill" src='/images/more.png'></image>
            </view>
          </view>
        </view>
        <view class='notification-container' catchtap='extendNotification'>
          <view class='noti-time-container'>
            <text>2018-5-4</text>
            <text>00:01</text>
          </view>
          <view class='noti-body-container'>
            <view style='background-color:#b6d7a8;' class='noti-body'>
              <text> 通知的标题1 </text>
              <image style='height:50rpx;width:50rpx;margin-right:16rpx;' mode="scaleToFill" src='/images/more.png'>
              </image>
            </view>
          </view>
        </view>
        <view class='notification-container' catchtap='extendNotification'>
          <view class='noti-time-container'>
            <text>2018-5-4</text>
            <text>00:02</text>
          </view>
          <view class='noti-body-container'>
            <view style='background-color:#9fc5e8;' class='noti-body'>
              <text> 通知的标题2 </text>
              <image style='height:50rpx;width:50rpx;margin-right:16rpx;' mode="scaleToFill" src='/images/more.png'></image>
            </view>
          </view>
        </view>
      </scroll-view>
    </swiper-item>
    <swiper-item>
      <!--过期的通知  -->
      <scroll-view scroll-y class='body-container'>
        <view class='notification-container' catchtap='extendNotification'>
          <view class='noti-time-container'>
            <text>2018-5-4</text>
            <text>00:00</text>
          </view>
          <view class='noti-body-container'>
            <view class='noti-body'>
              <text> 通知的标题 </text>
              <image style='height:50rpx;width:50rpx;margin-right:16rpx;' mode="scaleToFill" src='/images/more.png'></image>
            </view>
          </view>
        </view>
        <view class='notification-container' catchtap='extendNotification'>
          <view class='noti-time-container'>
            <text>2018-5-4</text>
            <text>00:01</text>
          </view>
          <view class='noti-body-container'>
            <view style='background-color:#b6d7a8;' class='noti-body'>
              <text> 通知的标题1 </text>
              <image style='height:50rpx;width:50rpx;margin-right:16rpx;' mode="scaleToFill" src='/images/more.png'>
              </image>
            </view>
          </view>
        </view>
        <view class='notification-container' catchtap='extendNotification'>
          <view class='noti-time-container'>
            <text>2018-5-4</text>
            <text>00:02</text>
          </view>
          <view class='noti-body-container'>
            <view style='background-color:#9fc5e8;' class='noti-body'>
              <text> 通知的标题2 </text>
              <image style='height:50rpx;width:50rpx;margin-right:16rpx;' mode="scaleToFill" src='/images/more.png'></image>
            </view>
          </view>
        </view>
      </scroll-view>
    </swiper-item>
  </swiper>


  <view class='add-notification' hover-class='add-notification-down' hover-stay-time='100' catchtap='tapOnNewNotification'>
    <image style='height:50rpx;width:50rpx;' mode="scaleToFill" src='/images/plus.png'></image>
  </view>

</view>