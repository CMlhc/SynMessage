/* pages/main/main.wxss */
@import "../../templates/sent_notification_template.wxss";

page {
  height: 100%;
  width: 100%;
}

.base-container {
  width: 100%;
  height: 100%;
}

/*头  */

.head-container {
  height: 10%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: #95c6f2;
  /* outline: 1px solid red; */
}

.head-container view {
  width: 30%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  /* outline: 1px solid red;  */
  font-size: 1.3em;
}

.swiper-container {
  height: 90%;
  width: 100%;
}

/*通知体  */

.body-container {
  height: 100%;
  width: 100%;
  /* outline: 1px dashed red; */
}

/*通知  */

.notification-container {
  height: 140rpx;
  display: flex;
  flex-direction: row;
  overflow: hidden;
  margin: 0 20rpx;
  border-radius: 8rpx;
  /* background-color: paleturquoise; *//* outline: 1px solid rebeccapurple; */
}

/*时间  */

.noti-time-container {
  width: 30%;
  height: 100%;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  /* border-right: 1px solid red; */
  justify-content: center;
  flex-direction: column;
}

/*通知体  */

.noti-body-container {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 70%;
}

.noti-body {
  height: 90%;
  width: 90%;
  display: flex;
  padding-left: 1em;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-radius: 8rpx;
  background-color: pink;
  box-shadow: 0 10rpx 10rpx -5rpx #aaa;
}

.add-notification {
  /* outline: 1px solid red; */
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: 60rpx;
  background-color: #0ed50e;
  right: 40rpx;
  border-radius: 100rpx;
  box-shadow: 10rpx 20rpx 20rpx -10rpx #aaa;
}

.add-notification-down {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  background-color: #0d720d;
  bottom: 60rpx;
  right: 40rpx;
  border-radius: 100rpx;
  box-shadow: 5rpx 10rpx 10rpx -5rpx #aaa;
}

/*全局  */

   /*     */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.tapOn {
  color: red;
}

